exporters:
  # Example 1: NVIDIA GPU temperature using nvidia-smi
  - name: nvidia_gpu_temperature
    type: command
    command: "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits"
    interval: 30
    metric_type: gauge
    parser:
      type: line
      line_num: 0
    labels:
      gpu: "0"
      device: "nvidia"
    description: "NVIDIA GPU temperature in Celsius"

  # Example 2: System load average
  - name: system_load_1m
    type: command
    command: "uptime | awk '{print $(NF-2)}' | sed 's/,//'"
    interval: 10
    metric_type: gauge
    parser:
      type: regex
      pattern: '([0-9.]+)'
    labels:
      period: "1m"
    description: "System load average for 1 minute"

  # Example 3: Disk usage percentage
  - name: disk_usage_percent
    type: command
    command: "df -h / | awk 'NR==2 {print $5}' | sed 's/%//'"
    interval: 60
    metric_type: gauge
    parser:
      type: regex
      pattern: '([0-9]+)'
    labels:
      mount: "/"
      filesystem: "root"
    description: "Disk usage percentage for root filesystem"

  # Example 4: HTTP endpoint monitoring
  - name: api_response_time
    type: http
    url: "http://localhost:3000/health"
    interval: 15
    metric_type: gauge
    parser:
      type: json
      json_path: "response_time"
    labels:
      endpoint: "health"
      service: "api"
    description: "API response time in milliseconds"

  # Example 5: Custom application metrics from file
  - name: app_active_connections
    type: file
    file_path: "/var/log/app/metrics.json"
    interval: 30
    metric_type: gauge
    parser:
      type: json
      json_path: "connections.active"
    labels:
      app: "myapp"
    description: "Number of active connections in the application"

  # Example 6: Memory usage from /proc/meminfo
  - name: memory_available_bytes
    type: command
    command: "cat /proc/meminfo | grep MemAvailable"
    interval: 15
    metric_type: gauge
    parser:
      type: regex
      pattern: 'MemAvailable:\s+([0-9]+)\s+kB'
    labels:
      type: "available"
    description: "Available memory in kilobytes"

  # Example 7: Network interface statistics
  - name: network_rx_bytes
    type: command
    command: "cat /proc/net/dev | grep eth0"
    interval: 20
    metric_type: counter
    parser:
      type: split
      split: " "
      index: 2
    labels:
      interface: "eth0"
      direction: "rx"
    description: "Network receive bytes for eth0"

  # Example 8: Process count
  - name: process_count
    type: command
    command: "ps aux | wc -l"
    interval: 30
    metric_type: gauge
    parser:
      type: regex
      pattern: '([0-9]+)'
    labels:
      type: "total"
    description: "Total number of processes"

  # Example 9: Custom service status
  - name: service_status
    type: command
    command: "systemctl is-active nginx"
    interval: 60
    metric_type: gauge
    parser:
      type: regex
      pattern: 'active'
    labels:
      service: "nginx"
    description: "Service status (1 if active, 0 otherwise)"

  # Example 10: Temperature from sensors
  - name: cpu_temperature
    type: command
    command: "sensors | grep 'Core 0' | awk '{print $3}' | sed 's/+//;s/Â°C//'"
    interval: 25
    metric_type: gauge
    parser:
      type: regex
      pattern: '([0-9.]+)'
    labels:
      core: "0"
      sensor: "cpu"
    description: "CPU core temperature in Celsius"